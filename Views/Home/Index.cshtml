@model List<WebApplication1.Models.User>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Entity Framework Core with SQLite Example</p>
</div>

@if (ViewBag.JwtToken != null)
{
    <div class="container mt-3">
        <div class="alert alert-info">
            <h5>Test JWT Token:</h5>
            <div class="text-break" style="font-family: monospace; font-size: 0.9em;">
                @ViewBag.JwtToken
            </div>
            <small class="text-muted">Use this token in the Authorization header: <code>Bearer &lt;token&gt;</code></small>
        </div>
    </div>
}

<div class="container mt-4">
    <h2>Users from Database</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>avatar</th>
                <th>OTP</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.userId</td>
                    <td>@user.username</td>
                    <td>@user.linkAvatar</td>
                    <td>@user.otp</td>
                </tr>
            }
        </tbody>
    </table>
</div>
